<resources>

    <!-- Base application theme. -->
    <style name="AppThemeSabi" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_orange_sabi</item>
        <item name="colorPrimaryDark">@color/color_orange_dark_sabi</item>
        <item name="colorAccent">@color/color_purple_sabi</item>

        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeSabi.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/color_purple_sabi</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeTorben" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_purple_torben</item>
        <item name="colorPrimaryDark">@color/color_purple_dark_torben</item>
        <item name="colorAccent">@color/color_orange_torben</item>

<!--        <item name="windowActionBar">false</item>-->
    </style>

    <style name="AppThemeTorben.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/color_orange_torben</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomActivityTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

</resources>
