<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeSabi" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_dark_gray</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/color_orange_light_sabi</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityTransition</item>
        <item name="android:windowSplashscreenContent">@color/color_dark_gray</item>
<!--        <item name="windowActionBar">false</item>-->
    </style>

    <style name="AppThemeSabi.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/color_orange_light_sabi</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSplashscreenContent">@color/color_dark_gray</item>
    </style>

    <style name="AppThemeTorben" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_dark_gray</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/color_purple_light_torben</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityTransition</item>
        <item name="android:windowSplashscreenContent">@color/color_dark_gray</item>

<!--        <item name="windowActionBar">false</item>-->
    </style>

    <style name="AppThemeTorben.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/color_purple_light_torben</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSplashscreenContent">@color/color_dark_gray</item>
    </style>

</resources>