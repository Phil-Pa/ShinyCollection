<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AddNewPokemonActivity">

    <androidx.appcompat.widget.AppCompatImageView android:layout_width="150dp" android:layout_height="150dp"
                                                  android:id="@+id/add_new_pokemon_activity_imageView_preview"
                                                  app:layout_constraintBottom_toTopOf="@+id/add_new_pokemon_activity_spinner_hunt_methods"
                                                  android:layout_marginTop="8dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="8dp"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="8dp"
                                                  app:layout_constraintHorizontal_bias="0.5"/>

    <androidx.appcompat.widget.AppCompatSpinner android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:entries="@array/hunt_methods"
                                                android:id="@+id/add_new_pokemon_activity_spinner_hunt_methods"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                android:layout_marginStart="8dp"
                                                android:layout_marginBottom="8dp"
                                                app:layout_constraintBottom_toTopOf="@+id/add_new_pokemon_activity_edittext_name"
                                                app:layout_constraintTop_toBottomOf="@+id/add_new_pokemon_activity_imageView_preview"
                                                app:layout_constraintHorizontal_bias="0.5"/>

    <androidx.appcompat.widget.AppCompatEditText android:layout_width="200dp" android:layout_height="48dp"
                                                 android:id="@+id/add_new_pokemon_activity_edittext_name"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="8dp"
                                                 android:hint="@string/editText_pokemonName_hint"
                                                 android:inputType="text"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="8dp"
                                                 app:layout_constraintHorizontal_bias="0.5"
                                                 android:layout_marginBottom="7dp"
                                                 app:layout_constraintBottom_toTopOf="@+id/add_new_pokemon_activity_edittext_eggsNeeded"
                                                 app:layout_constraintTop_toBottomOf="@+id/add_new_pokemon_activity_spinner_hunt_methods"/>

    <androidx.appcompat.widget.AppCompatEditText android:layout_width="200dp" android:layout_height="wrap_content"
                                                 android:id="@+id/add_new_pokemon_activity_edittext_eggsNeeded"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="8dp"
                                                 android:hint="@string/editText_encounter_hint"
                                                 android:inputType="number"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="8dp"
                                                 android:layout_marginBottom="8dp"
                                                 app:layout_constraintBottom_toTopOf="@+id/add_new_pokemon_activity_button_add"
                                                 app:layout_constraintTop_toBottomOf="@+id/add_new_pokemon_activity_edittext_name"
                                                 app:layout_constraintHorizontal_bias="0.5"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/button_ripple"
            android:text="@string/button_add_pokemon_text"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" android:id="@+id/add_new_pokemon_activity_button_add"
            app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>