<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="presenter" type="de.phil.solidsabissupershinysammlung.presenter.AddNewPokemonPresenter"/>
    </data>

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.AddNewPokemonActivity">

        <android.support.v7.widget.AppCompatSpinner android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:entries="@array/hunt_methods"
                                                    android:id="@+id/add_new_pokemon_activity_spinner_hunt_methods"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    android:layout_marginStart="8dp"
                                                    android:layout_marginBottom="8dp"
                                                    app:layout_constraintBottom_toTopOf="@+id/add_new_pokemon_activity_edittext_name"/>

        <EditText android:layout_width="100dp" android:layout_height="48dp"
                  android:id="@+id/add_new_pokemon_activity_edittext_name" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  android:hint="Name:"
                  android:inputType="text"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintHorizontal_bias="0.498"
                  android:layout_marginBottom="7dp"
                  app:layout_constraintBottom_toTopOf="@+id/add_new_pokemon_activity_edittext_eggsNeeded"/>

        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
                  android:id="@+id/add_new_pokemon_activity_edittext_eggsNeeded"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  android:hint="Encounter:"
                  android:inputType="number"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/add_new_pokemon_activity_button_add"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/button_ripple"
                android:text="HinzufÃ¼gen"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" android:id="@+id/add_new_pokemon_activity_button_add"/>

    </android.support.constraint.ConstraintLayout>
    
</layout>