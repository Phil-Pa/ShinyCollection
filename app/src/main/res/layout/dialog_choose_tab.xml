<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="15dp">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <Button android:layout_width="100dp"
                android:textColor="@android:color/white"
                style="?android:attr/buttonBarButtonStyle"
                android:text="Shiny Liste"
                android:background="@drawable/button_ripple"
                android:layout_height="wrap_content" android:id="@+id/shiny_list_button"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/cycle_20_button"/>
        <Button android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="15er Zyklus"
                android:textColor="@android:color/white"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/button_ripple"
                android:id="@+id/cycle_15_button"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/shiny_list_button" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/sos_button"/>
        <Button android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="20er Zyklus"
                android:textColor="@android:color/white"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/button_ripple" android:id="@+id/cycle_20_button"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/shiny_list_button"
                app:layout_constraintHorizontal_bias="0.5"/>
        <Button android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="SOS"
                android:textColor="@android:color/white"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/button_ripple"
                android:id="@+id/sos_button"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cycle_20_button"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cycle_15_button" app:layout_constraintHorizontal_bias="0.5"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>