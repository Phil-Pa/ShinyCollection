<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fragment_pokemondata_small_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/fragment_pokemondata_image_content_description"
            android:padding="8dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_margin="8dp"
            android:padding="3dp"
            android:textSize="8sp"
            android:background="@drawable/small_encounter_background"
            android:id="@+id/fragment_pokemondata_small_icon_encounter_text"
            android:textColor="@color/colorBright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fragment_pokemondata_small_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>