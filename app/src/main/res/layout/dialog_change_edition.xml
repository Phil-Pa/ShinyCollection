<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dialog_edition_xy"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/cover_xy"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dialog_edition_oras"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/cover_oras"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dialog_edition_sm"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/cover_sm"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dialog_edition_usum"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/cover_usum"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dialog_edition_swsh"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/cover_swsh"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dialog_edition_go"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/cover_go"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dialog_edition_letsgo"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/cover_letsgo"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>