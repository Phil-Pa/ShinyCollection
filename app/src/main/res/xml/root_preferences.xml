<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="@string/general">

        <SwitchPreferenceCompat
                app:defaultValue="false"
                app:key="auto_sort"
                app:iconSpaceReserved="false"
                app:summary="@string/sort_automatically_summary"
                app:title="@string/sort_automatically" />

        <SwitchPreferenceCompat
                app:defaultValue="false"
                app:key="use_dark_mode"
                app:iconSpaceReserved="false"
                app:title="Dunkler Modus" />

        <SwitchPreferenceCompat
                app:defaultValue="true"
                app:key="compress_export_import"
                app:iconSpaceReserved="false"
                app:title="Daten komprimieren"
                app:summary="Die Größe deiner exportieren und importieren Daten wird verkleinert."
            />



    </PreferenceCategory>

</PreferenceScreen>
