<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="de.phil.solidsabissupershinysammlung">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
            android:allowBackup="false"
            android:icon="@drawable/egg"
            android:label="@string/app_name"
            android:roundIcon="@drawable/egg"
            android:supportsRtl="true"
            android:theme="@style/AppThemeSabi"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.StatisticsActivity"
                android:parentActivityName=".activity.MainActivity"
                android:label="@string/statistics"/>
        <activity
                android:name=".activity.SettingsActivity"
                android:label="@string/title_activity_settings"
                android:parentActivityName=".activity.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="de.phil.solidsabissupershinysammlung.activity.MainActivity" />
        </activity>
        <activity
                android:name=".activity.AddNewPokemonActivity"
                android:label="@string/title_activity_addNewPokemon"
                android:parentActivityName=".activity.MainActivity" />
        <activity
                android:name=".activity.MainActivity"
                android:label="@string/app_name"
                android:persistent="true"
                android:theme="@style/AppThemeSabi.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>